{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "ESNext",
        "types": ["node"],
        "skipLibCheck": true,

        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/main", "vite.config.ts"]
}
